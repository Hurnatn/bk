<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_hovered="false"
          android:state_selected="false" android:state_checkable="false" android:state_checked="false"
          android:state_enabled="false" android:state_activated="false" android:state_window_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondaryLightColor"/>
            <stroke android:color="@color/secondaryTextColor" android:width="2dp"/>
            <!--corners allow us to make the rounded corners button-->
            <gradient android:type="radial"
                      android:gradientRadius="85dp"
                      android:startColor="#bab6dc"
                      android:centerColor="@color/primaryDarkColor"
                      android:endColor="@color/secondaryTextColor"
                      android:width="10dp"

                      android:thickness="90dp"
                      android:centerX="100%"
                      android:centerY="100%"

            />
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>